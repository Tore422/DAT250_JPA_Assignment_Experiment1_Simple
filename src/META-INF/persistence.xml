<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="todos" transaction-type="RESOURCE_LOCAL">
        <class>de.vogella.jpa.simple.model.Todo</class>
        <properties>
            <property name="javax.persistence.jdbc.driver"
                      value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:derby:\Users\tore4\vogella\databases\simpleDb;create=true"/>
            <property name="javax.persistence.jdbc.user"
                      value="test"/>
            <property name="javax.persistence.jdbc.password"
                      value="test"/>

            <!-- EclipseLink should create the database schema automatically -->
            <!--<property name="eclipselink.ddl-generation"
                      value="create-tables"/> -->
            <!-- The above property will delete and recreate the database upon each run,
            so it should be commented out after first iteration. -->
            <property name="eclipselink.ddl-generation.output-mode"
                      value="both"/>
        </properties>

    </persistence-unit>
</persistence>